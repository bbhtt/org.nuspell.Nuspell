{
  "app-id": "org.nuspell.Nuspell",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "19.08",
  "sdk": "org.freedesktop.Sdk",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Locale"
  ],
  "platform-extensions": [
    "org.freedesktop.Platform.Locale"
  ],
  "separate-locales": false,
  "command": "nuspell",
  "cleanup": [
    "/include",
    "/lib/cmake",
    "/lib/pkgconfig"
  ],
  "modules": [
    {
      "name": "launcher",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p /app/share/metainfo/",
        "cp -f org.nuspell.Nuspell.metainfo.xml /app/share/metainfo/"
      ],
      "sources": [
        {
          "type": "file",
          "path": "org.nuspell.Nuspell.metainfo.xml"
        }
      ]
    },
    {
      "name": "nuspell",
      "buildsystem": "cmake",
      "config-opts": [
        "-DBUILD_TESTING=OFF",
        "-DCMAKE_BUILD_TYPE=Release"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/nuspell/nuspell/archive/v4.2.0.tar.gz",
          "sha256": "01804d490bec517748ee49fa2f1249f4c99380c26335e32082cdaa02b5b2b4dc"
        }
      ]
    }
  ]
}

{
  "app-id": "org.nuspell.Nuspell",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "19.08",
  "sdk": "org.freedesktop.Sdk",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Locale"
  ],
  "platform-extensions": [
    "org.gnome.Platform.Locale"
  ],
  "separate-locales": false,
  "command": "nuspell",
  "finish-args": [
    "--env=DICPATH=/var/run/host/usr/share/hunspell:/var/run/host/usr/local/share/hunspell:/app/usr/share/hunspell"
  ],
  "cleanup": [
    "/include",
    "/lib/cmake",
    "/lib/pkgconfig"
  ],
  "modules": [
    {
      "name": "boost",
      "buildsystem": "simple",
      "build-commands": [
        "./bootstrap.sh --prefix=/app --with-libraries=locale",
        "./b2 install"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://dl.bintray.com/boostorg/release/1.65.1/source/boost_1_65_1.tar.bz2",
          "sha256": "9807a5d16566c57fd74fb522764e0b134a8bbe6b6e8967b83afefd30dcd3be81"
        }
      ]
    },
    {
      "name": "launcher",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p /app/share/metainfo/",
        "cp -f org.nuspell.Nuspell.metainfo.xml /app/share/metainfo/"
      ],
      "sources": [
        {
          "type": "file",
          "path": "org.nuspell.Nuspell.metainfo.xml"
        }
      ]
    },
    {
      "name": "nuspell",
      "modules": [
        "boost"
      ],
      "buildsystem": "cmake",
      "config-opts": [
        "-DBUILD_TESTING=OFF",
        "-DCMAKE_BUILD_TYPE=Release",
        "-DBOOST_ROOT=/app"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/nuspell/nuspell/archive/v4.0.1.tar.gz",
          "sha256": "e1883c919ec2878ffe2e47acf28eec352322e71b1a0511ccadf9c15fdfc30a0d"
        }
      ]
    }
  ]
}
